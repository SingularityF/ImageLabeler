<Window x:Class="ImageLabeler.KeyReader"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageLabeler"
        mc:Ignorable="d"
        Title="Key Reader" Height="150" Width="300" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" KeyDown="Window_KeyDown">
    <Grid>
        <Label Content="Press a key to assign" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#FF126A93"></Label>
    </Grid>
</Window>
